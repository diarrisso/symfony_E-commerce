{% extends 'base.html.twig' %}

{% block title %} la liste des category des produits {{ categories.name }}{% endblock %}

{% block body %}

<h1> details products de {{ categories.name }}</h1>

<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>liste de tous les products</h1>
        </div>
        {% for product in products %}
        <div class="col-3">
            <div class="card">
                <article class="card-body">
                    <h2>{{ product.name}}
                    <p>{{ product.description}}</p>
                     <span>{{product.price}}</span>
                </article>
            </div>
        </div>
        {% endfor %}
    </section>
</main>



{% endblock %}
